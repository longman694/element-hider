{
  "manifest_version": 3,
  "name": "Element Hider",
  "version": "0.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "element-hider@example.com"
    }
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
